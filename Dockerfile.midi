FROM python:3.11-slim

# 작업 디렉토리 설정
WORKDIR /app

# 시스템 패키지 업데이트 및 MIDI 관련 패키지 설치
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    libasound2-dev \
    libportmidi-dev \
    libsndfile1-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Python 종속성 복사 및 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 공통 모듈 복사
COPY services/shared/ services/shared/

# MIDI 서비스 복사
COPY services/midi-service/ services/midi-service/

# 파일 업로드/생성 디렉토리 생성
RUN mkdir -p /app/uploads/midi /app/generated/midi

# 환경 변수 설정
ENV PYTHONPATH=/app
ENV SERVICE_NAME=midi-service
ENV SERVICE_PORT=8002

# 포트 노출
EXPOSE 8002

# 헬스체크
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

# 서비스 시작
CMD ["python", "-m", "uvicorn", "services.midi-service.main:app", "--host", "0.0.0.0", "--port", "8002"]