# 데이터베이스 설정
DB_DATABASE_URL=postgresql://musicuser:musicpass@localhost:5432/musicdb
DB_ECHO=false

# Redis 설정
REDIS_REDIS_URL=redis://localhost:6379

# 인증 설정
AUTH_SECRET_KEY=your-super-secret-key-change-in-production-to-something-more-secure
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 서비스 설정
SERVICE_DEBUG=false
SERVICE_HOST=0.0.0.0

# Gateway 설정
SERVICE_GATEWAY_URL=http://localhost:8000
SERVICE_USER_SERVICE_URL=http://localhost:8001
SERVICE_MIDI_SERVICE_URL=http://localhost:8002
SERVICE_RAG_SERVICE_URL=http://localhost:8003

# OpenAI 설정 (RAG 서비스용)
OPENAI_API_KEY=your-openai-api-key-here

# 로깅 설정
LOG_LEVEL=INFO

# 파일 업로드 설정
MAX_UPLOAD_SIZE=50MB
UPLOAD_DIR=./uploads
GENERATED_DIR=./generated

# ChromaDB 설정
CHROMA_PERSIST_DIRECTORY=./chroma_db

# 모니터링 (선택사항)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false